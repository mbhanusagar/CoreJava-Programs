package ProjectManagementSystem;

class Employee {
    private String id;
    private String name;
    private String role;

    // Constructor
    public Employee(String id, String name, String role) {
        this.id = id;
        this.name = name;
        this.role = role;
    }

    public String getId() {
        return id;
    }

    public String getName() {
        return name;
    }

    public String getRole() {
        return role;
    }

    @Override
    public String toString() {
        return "Employee ID: " + id + ", Name: " + name + ", Role: " + role;
    }
}


